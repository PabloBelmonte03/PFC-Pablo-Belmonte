<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pantallaRegistro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoPantalla"
    tools:context=".ui.RegistroActivity">

    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_fondo_principal"
        android:contentDescription="@null" />

    <!-- Guidelines para dividir la pantalla -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.56" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_82"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.89" />

    <!-- LOGO en la columna 1 -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_25"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5" />

    <!-- Campo User en columna 2 -->
    <EditText
        android:id="@+id/RegisterTextUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="User"
        android:background="@drawable/edittext_background"
        android:padding="16dp"
        android:textSize="16sp"
        android:textColorHint="@android:color/darker_gray"
        android:drawablePadding="8dp"
        app:layout_constraintStart_toStartOf="@+id/guideline_25"
        app:layout_constraintEnd_toStartOf="@+id/guideline_50"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp" />

    <!-- Campo DNI_User debajo de User -->
    <EditText
        android:id="@+id/DNI_User"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="DNI_User"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/edittext_background"
        android:padding="16dp"
        android:textSize="16sp"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/RegisterTextUsuario"
        app:layout_constraintStart_toStartOf="@+id/guideline_25"
        app:layout_constraintEnd_toStartOf="@+id/guideline_50"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Campo Email debajo de DNI_User -->
    <EditText
        android:id="@+id/RegisterTextEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="email@example.com"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/edittext_background"
        android:padding="16dp"
        android:textSize="16sp"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/DNI_User"
        app:layout_constraintStart_toStartOf="@+id/guideline_25"
        app:layout_constraintEnd_toStartOf="@+id/guideline_50"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Campo Password en columna 3 -->
    <EditText
        android:id="@+id/RegisterPass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="textPassword"
        android:background="@drawable/edittext_background"
        android:padding="16dp"
        android:textSize="16sp"
        android:drawablePadding="8dp"
        app:layout_constraintStart_toStartOf="@+id/guideline_50"
        app:layout_constraintEnd_toStartOf="@+id/guideline_82"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp" />

    <!-- Campo Repeat Password debajo de Password -->
    <EditText
        android:id="@+id/ReapeatRegisterPass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Repeat Password"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="textPassword"
        android:background="@drawable/edittext_background"
        android:padding="16dp"
        android:textSize="16sp"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/RegisterPass"
        app:layout_constraintStart_toStartOf="@+id/guideline_50"
        app:layout_constraintEnd_toStartOf="@+id/guideline_82"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- BotÃ³n Registrar debajo de Repeat Password -->
    <Button
        android:id="@+id/btn_Registrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:background="@drawable/edittext_background"
        android:textColor="@color/white"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/ReapeatRegisterPass"
        app:layout_constraintStart_toStartOf="@+id/guideline_50"
        app:layout_constraintEnd_toStartOf="@+id/guideline_82"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintHorizontal_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
