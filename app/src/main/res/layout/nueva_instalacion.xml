<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/containerNuevaInstalacion"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivImagenSeleccionada"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"
            android:contentDescription="Imagen de la instalaci칩n" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona una imagen:"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerImagenes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre" />

        <EditText
            android:id="@+id/editDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripci칩n" />

        <EditText
            android:id="@+id/editUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ubicaci칩n" />

        <EditText
            android:id="@+id/editHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Horario disponible" />

        <EditText
            android:id="@+id/editCapacidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Capacidad m치xima"
            android:inputType="number" />

        <CheckBox
            android:id="@+id/checkRequiereReserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requiere reserva" />
    </LinearLayout>
</ScrollView>
