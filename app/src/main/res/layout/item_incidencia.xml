<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tituloIncidencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descripcionIncidencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tituloIncidencia"
            android:layout_marginTop="4dp"
            android:text="Descripción"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descripcionIncidencia"
            android:layout_marginTop="4dp"
            android:text="Estado: pendiente"
            android:textColor="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/usuarioIncidencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textEstado"
            android:layout_marginTop="6dp"
            android:text="Incidencia reportada por: ..."
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="italic" />

        <ImageButton
            android:id="@+id/btnEliminarIncidencia"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignTop="@id/tituloIncidencia"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="Eliminar incidencia"
            android:src="@drawable/ic_delete"
            android:visibility="gone" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
