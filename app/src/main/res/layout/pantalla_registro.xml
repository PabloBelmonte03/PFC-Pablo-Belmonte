<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pantallaRegistro"
    android:layout_width="match_parent"
    android:background="@color/fondoPantalla"
    android:layout_height="match_parent">

    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_fondo_principal"
        android:contentDescription="@null" />

    <!-- Guideline superior: delimita el inicio del bloque de contenido -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/guideline_top_percent" />

    <!-- Guideline inferior: delimita el fin del bloque de contenido -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/guideline_bottom_percent" />

    <!-- LOGO: se posiciona en la parte superior, su horizontal_bias se ajusta en dimens -->

    <!-- EditText Usuario: se encadena entre el logo y el siguiente campo -->

    <EditText
        android:id="@+id/DNI_User"
        android:layout_width="239dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="272dp"
        android:background="@drawable/edittext_background"
        android:drawablePadding="8dp"
        android:hint="DNI_User"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backgroundImage" />

    <EditText
        android:id="@+id/RegisterTextUsuario"
        android:layout_width="239dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_background"
        android:drawablePadding="8dp"
        android:hint="User"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/DNI_User" />

    <EditText
        android:id="@+id/RegisterTextEmail"
        android:layout_width="239dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_background"
        android:drawablePadding="8dp"
        android:hint="email@example.com"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegisterTextUsuario" />



    <EditText
        android:id="@+id/RegisterPass"
        android:layout_width="239dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_background"
        android:drawablePadding="8dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegisterTextEmail" />


    <EditText
        android:id="@+id/ReapeatRegisterPass"
        android:layout_width="239dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_background"
        android:drawablePadding="8dp"
        android:hint="Reapeat Password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegisterPass" />


    <Button
        android:id="@+id/btn_Registrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/edittext_background"
        android:elevation="6dp"
        android:text="Entrar"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ReapeatRegisterPass" />


</androidx.constraintlayout.widget.ConstraintLayout>